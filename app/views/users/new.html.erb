<legend>Sign up</legend>
<br/>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
  <div class="control-group">
    <label class="control-label" for="item_id">Email</label>
    <div class="controls">
	  <%= f.text_field :email %>
    </div>
  </div>
  <br/>
  <div class="control-group">
    <label class="control-label" for="item_id">Password (leave blank if you don't want to change it)</label>
    <div class="controls">
 	  <%= f.password_field :password %>
    </div>
  </div>
  <br/>
  <div class="control-group">
    <label class="control-label" for="item_id">Password confirmation</label>
    <div class="controls">
 	  <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <br/>
  <div class="control-group">
    <label class="control-label" for="item_id">Phone number (to be contacted regarding critical auction updates)</label>
    <div class="controls">
 	  <%= f.password_field :phone_number %>
    </div>
  </div>

  <br/>
  <button type="submit" class="btn btn-primary">Sign up</button>
<% end %>