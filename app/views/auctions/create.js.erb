<% if @auction.errors.empty? %>
  $('#new_auction').modal('hide');
  $('#new_auction').detach();
  window.location.replace("<%= escape_javascript(edit_auction_path(@auction.id)); %>");
<% else %>
  $('#auction-update-result').detach();
  $('#new_auction .modal-body legend').before('<%= escape_javascript(render('auctions/errors', :auction => @auction)) %>');
  $('#new_auction, .modal-body').animate({scrollTop:0}, 'fast');
  $('#auction-update-result').effect("highlight", {}, 1000);
<% end %>