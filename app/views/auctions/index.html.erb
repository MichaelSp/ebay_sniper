<h1>My Auctions</h1>
<br>
<table class="table table-striped">
  <thead>
  <tr>
	<th>Picture</th>
    <th>Item</th>
    <th>Max bid</th>
    <th></th>
  </tr>
  </thead>

<tbody>
<% @auctions.each do |auction| %>
  <tr onclick="location.href='<%= edit_auction_path(auction) %>'">
	<td><%= image_tag auction.picture[0],
			:height => '100', :width => '100' %></td>
    <td><h3><%= truncate(auction.item[:get_item_response][:item][:title], :length => 50) %></h3></td>
    <td><%= number_to_currency(auction.max_bid, :locale => auction.item[:get_item_response][:item][:currency]) %></td>
    <td><%= link_to 'Remove Auction', auction, :method => :delete, :data => { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Auction', new_auction_path %>
