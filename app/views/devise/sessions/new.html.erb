<legend>Sign in</legend>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <br>
  <div class="control-group">
    <label class="control-label" for="item_id">Email</label>
    <div class="controls">
	  <%= f.text_field :email %>
    </div>
  </div>
  <br>
  <div class="control-group">
    <label class="control-label" for="item_id">Password</label>
    <div class="controls">
 	  <%= f.password_field :password %>
    </div>
  </div>
  <br><br>
  <button type="submit" class="btn btn-primary btn-large">Sign in</button> | 
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %>	Stay signed in?
  <% end -%>
  <br><br>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-info" %> |
<%= link_to "Sign up", new_registration_path(resource_name), :class => "btn btn-success" %>